<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
        <DockPanel LastChildFill="True">
            <Rectangle Fill="#FFF4F4F5" Height="68" Stroke="Black" DockPanel.Dock="Top" Margin="0"/><!--ribbon-->
            <StatusBar  VerticalAlignment="Top" DockPanel.Dock="Bottom" Height="24"/><!--grid-->
            <WebBrowser DockPanel.Dock="Left" Width="{Binding ActualWidth}" Source="https://ya.ru"  /> <!---->
    </DockPanel>
</Window>
